# AI Voice Streaming Host Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
AIVOICE_DEBUG=false
AIVOICE_LOG_LEVEL=INFO

# Voice Engine Settings
AIVOICE_PRIMARY_VOICE_ENGINE=xtts_v2
AIVOICE_FALLBACK_VOICE_ENGINE=chattts
AIVOICE_USE_GPU=true

# Audio Settings
AIVOICE_SAMPLE_RATE=22050
AIVOICE_AUDIO_FORMAT=wav
AIVOICE_CHUNK_SIZE=1024
AIVOICE_CHANNELS=1

# Streaming Settings
AIVOICE_STREAMING_PLATFORM=douyin
AIVOICE_STREAM_QUALITY=high
AIVOICE_MAX_LATENCY_MS=200
AIVOICE_BUFFER_SIZE=4096

# Language Settings
AIVOICE_DEFAULT_LANGUAGE=auto
AIVOICE_SUPPORTED_LANGUAGES=zh,en

# Performance Settings
AIVOICE_MAX_CONCURRENT_REQUESTS=5
AIVOICE_MODEL_CACHE_SIZE=3

# API Settings
AIVOICE_API_HOST=localhost
AIVOICE_API_PORT=8000
AIVOICE_WEBSOCKET_PORT=8001

# File Paths
AIVOICE_MODELS_DIR=models
AIVOICE_VOICES_DIR=voices
AIVOICE_CACHE_DIR=cache
AIVOICE_LOG_FILE=logs/app.log

# Douyin Integration (Optional)
# DOUYIN_ROOM_ID=your_room_id
# DOUYIN_AUTH_TOKEN=your_auth_token

# Advanced Settings
# AIVOICE_CUDA_DEVICE=0
# AIVOICE_MODEL_PRECISION=float16
# AIVOICE_BATCH_SIZE=1
